{
  "manifest_version": 3,
  "name": "GitHub Editor Zen Mode",
  "version": "1.0.0",
  "description": "Add a button to the GitHub editor to toggle zen mode",
  "icons": {
    "48": "icons/zen.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["fullscreen.js"],
      "css": ["style.css"]
    }
  ]
}
